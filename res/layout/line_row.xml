<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linebackground"
    android:animateLayoutChanges="true" >

    <RelativeLayout
        android:id="@+id/linewrapperrelativelayout"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:visibility="visible" >

        <TextView
            android:id="@+id/linenametextview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/linestatusimageview"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/linestatusimageview"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/linestatustextview"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/linestatusimageview"
        android:textColor="@color/white"
        android:visibility="gone"
         />

</RelativeLayout>